<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Landlord.AboutQuery">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
            <Label Text="Student Queirs" FontSize="40" FontAttributes="Bold" VerticalOptions="Center"/>
            <!-- Add more controls here if needed -->
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout Padding="40">
            <Label FontAttributes="Bold" Text="{Binding Title}" />
            <Label FontAttributes="Bold" Text="{Binding Name}" />
            <Label  FontAttributes="Bold" Text="{Binding Surname}" />
            <Label FontAttributes="Bold" Text="{Binding RoomNum}" />
            <Label Text="{Binding Description}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>