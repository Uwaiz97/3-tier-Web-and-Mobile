<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Register" Title="Register"
             BackgroundColor="GhostWhite">
    
    <ContentPage.Content>
            <ScrollView VerticalScrollBarVisibility="Always">
            <StackLayout Padding="100" VerticalOptions="Center" HorizontalOptions="Center">
            <!-- x:Name backend name -->
            <ActivityIndicator x:Name="activityIndicator" IsRunning="false" />
            <Label Text="Register" FontSize="30"></Label>

            <!-- First Names -->
            <Entry x:Name="txtName"
                   WidthRequest="500"
                   Placeholder="First Name(s)"
                   TextColor="Black"
                   PlaceholderColor="Gray">
            </Entry>

            <!--Last Name-->
            <Entry x:Name="txtSurname"
                   Placeholder="Last Name"
                   TextColor="Black"
                   PlaceholderColor="Gray">
            </Entry>

            <!--Email Address-->
            <Entry x:Name="txtEmail"
                   Keyboard="Email"
                   Placeholder="email"
                   TextColor="Black"
                   PlaceholderColor="Gray">
            </Entry>

            <!--Phone Number-->
            <Entry x:Name="txtPhone"
                   Placeholder="Phone Number"
                   Keyboard="Telephone"
                   TextColor="Black"
                   PlaceholderColor="Gray">
            </Entry>

            <!--Passowrd-->
            <Entry x:Name="txtPassword"
                   Placeholder="Password"
                   IsPassword="true"
                   TextColor="Black"
                   PlaceholderColor="Gray">
            </Entry>

            <!--Confirm Passowrd-->
            <Entry x:Name="txtConfirm"
                   Placeholder="Confirm Password"
                   IsPassword="true"
                   TextColor="Black"
                   PlaceholderColor="Gray">
            </Entry>

            <!--User Type-->
            <Label Text="User Type"/>
            <RadioButton CheckedChanged="UserType"
                         Content="Student"
                         IsChecked="True"/>

            <RadioButton CheckedChanged="UserType"
                         Content="Landlord"/>
            <!--Submit button-->
            <Button x:Name="btnRegister"
                    VerticalOptions="Center"
                    Text="Register"
                    TextColor="Gray"
                    TextTransform="Uppercase"
                    FontAttributes="Bold"
                    FontSize="17"
                    BackgroundColor="Transparent"
                    BorderWidth="1.5"
                    BorderColor="Gray"
                    CornerRadius="50"
                    Clicked="Register_Clicked">
            </Button>

            <!--Register Option-->
            <Label HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Already have an Account? " TextColor="Black"/>
                        <Span Text="Log In"  TextColor="Black" FontAttributes="Bold" TextDecorations="Underline"/>
                    </FormattedString>
                </Label.FormattedText>

                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
           
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>